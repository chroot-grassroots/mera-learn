{
  "name": "mera-learn",
  "version": "1.0.0",
  "description": "Cybersecurity Education Platform - Activist-focused learning using Solid Pods for privacy",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build-solid": "esbuild src/solid-bundle-source.js --bundle --outfile=static/js/solid-bundle.js --format=iife --global-name=SolidClient --define:process.env.NODE_ENV='\"production\"' --define:global=globalThis --platform=browser --target=es2020",
    "build-ts": "tsc",
    "build": "npm run build-ts && npm run build-solid",
    "watch-solid": "npm run build-solid -- --watch",
    "watch-ts": "tsc --watch",
    "dev": "concurrently \"npm run watch-ts\" \"npm run watch-solid\"",
    "generate-lessons": "python static/py/dev/initialization_javascript_writer.py"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chroot-grassroots/mera-learn.git"
  },
  "keywords": ["cybersecurity", "education", "solid-pod", "typescript", "privacy"],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chroot-grassroots/mera-learn/issues"
  },
  "homepage": "https://github.com/chroot-grassroots/mera-learn#readme",
  "dependencies": {
    "@inrupt/solid-client": "^2.1.2",
    "@inrupt/solid-client-authn-browser": "^3.1.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "events": "^3.3.0",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2"
  }
}